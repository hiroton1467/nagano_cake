<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のerrorが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  
<table>
  <tbody>

<%= form_with model: @customer, url:admin_customer_path(@customer.id), method: :patch do |f| %>
<tr>
<td>会員ID</td>
<td><%= @customer.id %></td>
</tr>

<tr>
<td>氏名</td>
<td><%= f.text_field :last_name %></td>
<td><%= f.text_field :first_name %></td>
</tr>

<tr>
<td>フリガナ</td>
<td><%= f.text_field :last_name_kana %></td>
<td><%= f.text_field :first_name_kana %></td>
</tr>

<tr> 
<td>郵便番号</td>
<td><%= f.text_field :postal_code %><td>
</tr>

<tr>
<td>住所</td>
<td><%= f.text_field :address, :size=>"40" %></td>
</tr>

<tr>
<td>電話番号</td>
<td><%= f.text_field :telephone_number %><td>
</tr>

<tr>
<td>メールアドレス</td>
<td><%= f.text_field :email %></td>
</tr>
  
<%= f.submit '変更を保存' %>

<% end %>