<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のerrorが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

<%= form_with model: @customer, url:admin_customer_path(@customer.id), method: :patch do |f| %>

<h4>会員ID</h4>
<p><%= @customer.id %></p>

<h4>氏名</h4>
  <%= f.text_field :name %>
  
<h4>郵便番号</h4>
  <%= f.text_field :postal_code %>
  
<h4>住所</h4>
  <%= f.text_area :address %>
  
<h4>電話番号</h4>
  <%= f.text_field :telephone_number %>
  
<h4>メールアドレス</h4>
  <%= f.text_field :email %>
  
<p><%= f.submit '変更を保存' %></p>

<% end %>