<% if @item.errors.any? %>
  <%= @item.errors.count %>件のerrorが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

<%= form_with model: @item, url:admin_item_path(@item.id), method: :patch do |f| %>

<h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
<h4>商品名</h4>
  <%= f.text_field :name %>
<h4>商品説明</h4>
  <%= f.text_area :introduction %>
<h4>値段</h4>
  <%= f.text_field :price %>
  
<p><%= f.submit '変更を保存' %></p>

<% end %>