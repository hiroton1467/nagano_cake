<table>
 <tbody>
 <tr>
  <td>購入者</td>
  <td><%= @order.customer.name %></td>
 </tr>
 
 <tr>
  <td>注文日</td>
  <td><%= @order.created_at %></td>
 </tr>
 
 <tr>
  <td>配送先</td>
  <td><%= @order.postcode %></td>
  <td><%= @order.address %></td>
  <td><%= @order.name %></td>
 </tr>
 
 <tr>
  <td>支払い方法</td>
  <td><%= @order.payment_method %></td>
 </tr>
 
  </tbody>
 <table>



<table>
 <tbody>
<% @order.order_items .each do |order_item| %>
 <tr>
  <td>商品</td>
  <td>単価（税込）</td>
  <td>個数</td>
  <td>小計</td>
 </tr>

 <tr>
  <td><%= order_item.item.name %></td>
  <td><%= order_item.price %></td>
  <td><%= order_item.quantity %></td>
  <td><%= order_item.quantity * order_item.price  %></td>
 </tr>
 <% end %>
 </tbody>
</table>

<table>
 <tbody>
 <tr>
  <td>商品合計</td>
  <td><%= @order.order_items.sum('quantity * price') %></td>
 </tr>

 <tr>
  <td>配送料</td>
  <td><%= @order.postage %></td>
 </tr>

 <tr>
  <td>ご請求額</td>
  <td><%= @order.order_items.sum('quantity * price') + @order.postage%></td>
 </tr>
 </tbody>
</table>




 
