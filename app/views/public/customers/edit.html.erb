<%= form_with model: @customer, url:customer_path(current_customer), method: :patch do |f| %>

  <div class="field">
  <%= f.label :名前（姓） %><br>
  <%= f.text_field :last_name %>
  </div>

  <div class="field">
  <%= f.label :名前（名） %><br>
  <%= f.text_field :first_name %>
  </div>

  <div class="field">
  <%= f.label :フリガナ（セイ） %><br>
  <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
  <%= f.label :フリガナ（メイ） %><br>
  <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
  <%= f.label :郵便番号 %><br>
  <%= f.text_field :postal_code %>
  </div>

  <div class="field">
  <%= f.label :住所 %><br>
  <%= f.text_field :address %>
  </div>

  <div class="field">
  <%= f.label :電話番号 %><br>
  <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
  <%= f.label :メールアドレス %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <p><%= f.submit '編集内容を保存する' %></p>
  <%= link_to "退会する", leave_path(@customer.id) %>


  <% end %>