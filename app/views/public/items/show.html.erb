<%=form_with model: CartItem.new, url:cart_items_path, method: :post do |f| %>
<table>
 </tbody>
 <tr>
  <%= image_tag @item.get_image(200,200) %>
  <td><%= link_to @item.name, items_path(@item.id) %></td>

  <td><%= @item.introduction %></td>
  
  <td><%= @item.with_tax_price %> (税込)</td>

   <%= f.hidden_field :item_id, :value => @item.id %>

 </tr>
 <p>数量を選択してください</p>
 <p><%= f.select :amount, *[1..99] %></p>

 <%= f.submit 'カートに入れる' %>

<p><%#= link_to "カートに入れる",  cart_items_path(@item.id) %></p>

 </tbody>
</table>

 <% end %>